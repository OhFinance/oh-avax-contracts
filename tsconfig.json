{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "abi/*": ["../abi/*"], // imports are relative to baseUrl
      "types": ["../types"]
    }
  },
  "files": [
    "hardhat.config.ts"
  ],
  "include": [
    "deploy",
    "test"
  ],
  "exclude": ["node_modules"]
}
